{
  "name": "agent-dashboard",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev --port 3000",
    "prebuild": "bash -c 'if [ -n \"$CONVEX_DEPLOYMENT\" ]; then convex codegen; else echo \"Skipping convex codegen (no CONVEX_DEPLOYMENT)\"; fi'",
    "build": "vite build",
    "preview": "vite preview",
    "pretest": "bash scripts/generate-stubs.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:smoke": "playwright test e2e/tests/dashboard.spec.ts --project=desktop-chromium",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "hooks:install": "bash scripts/install-hooks.sh",
    "lint": "pnpm lint:fast",
    "lint:fix": "eslint src/ convex/ --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "convex:dev": "convex dev",
    "convex:deploy": "convex deploy",
    "test:visual": "playwright test e2e/tests/visual.spec.ts",
    "test:visual:update": "playwright test e2e/tests/visual.spec.ts --update-snapshots",
    "lint:fast": "oxlint src convex",
    "lint:full": "eslint src/ convex/ --ext .ts,.tsx",
    "check:fast": "concurrently -n typecheck,lint \"pnpm typecheck\" \"pnpm lint:full\"",
    "check": "pnpm check:fast && pnpm test"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-devtools": "^0.7.0",
    "@tanstack/react-router": "^1.132.0",
    "@tanstack/react-router-devtools": "^1.132.0",
    "@tanstack/react-router-ssr-query": "^1.131.7",
    "@tanstack/react-start": "^1.132.0",
    "@tanstack/router-plugin": "^1.132.0",
    "better-auth": "^1.4.18",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.31.7",
    "lucide-react": "^0.545.0",
    "nitro": "npm:nitro-nightly@latest",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.1",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.2",
    "@tanstack/devtools-vite": "^0.3.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.10.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.1",
    "eslint": "^10.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.0.0",
    "lefthook": "^2.1.1",
    "oxlint": "^1.49.0",
    "typescript": "^5.7.2",
    "vite": "^7.1.7",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "//": "ajv pnpm.overrides omitted: pinning ajv>=8.18.0 (CVE-2025-69873 / GHSA-2g4f-4pwh-qvx6) breaks ESLint 10 â€” accepted as dev-only risk; see SECURITY.md",
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "lefthook"
    ]
  },
  "version": "0.8.0"
}
